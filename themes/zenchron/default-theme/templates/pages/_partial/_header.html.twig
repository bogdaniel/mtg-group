<!-- Header -->
<header class="site-header mo-left header style-1">
    <!-- Header Top Bar -->
    <div class="top-bar bg-secondary text-white">
        <div class="container">
            <div class="dz-topbar-inner d-flex justify-content-between align-items-center">
                <div class="dz-topbar-left">
                    <ul>
                        <li><i class="fas fa-map-marker-alt"></i> {% trans %}Str. Sapte Drumuri, Nr. 9, Sector 3, Bucure»ôti{% endtrans %}</li>
                        <li><i class="far fa-envelope"></i>{{ contactEmail }}</li>
                    </ul>
                </div>
                <div class="dz-topbar-right">
                    <ul class="dz-social">
                        <li><a class="fab fa-facebook-f" href="#" target="_blank"></a></li>
                        <li><a class="fab fa-instagram" href=#multigama.service"
                               target="_blank"></a>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <style>
        /* Custom styles */
        .image-container img {
            max-width: 7.725rem; /* Approximately 50 pixels in rem */
            height: auto;
            width: 100%;
        }

        /* Add this CSS to your stylesheet or <style> tag */
        .logo-header {
            display: flex;
            align-items: flex-end;
        }

        .small-logo {
            margin-left: 10px; /* Adjust the spacing between logos as needed */
            max-height: 45px; /* Set the desired maximum height for the second logo */
            margin-bottom: 29px;
        }
        .small-logo-tech {
            margin-left: 10px; /* Adjust the spacing between logos as needed */
            max-height: 50px; /* Set the desired maximum height for the second logo */
            margin-bottom: 25px;
        }
    </style>
    <!-- Main Header -->
    <div class="sticky-header main-bar-wraper navbar-expand-lg text-black">
        <div class="main-bar clearfix d-none d-sm-block">
            <div class="container clearfix bg-white">
                <div class="row justify-content-center align-items-center d-flex">
                    <div class="col-8">
                        <div class="image-container d-flex justify-content-center align-items-center my-4 mb-3">
                            {% for key, logo in logoList %}
                                <a href="{{ path('static_page', {'pageName': key }) }}" class="{{ loop.last ? '' : 'me-5' }}">
                                    <img src="{{ asset('assets/images/' ~ logo.logo) }}" alt="{{ key|capitalize }}">
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <div class="main-bar clearfix">
            <div class="container clearfix bg-white">
                <!-- Website Logo -->
                <div class="logo-header mostion logo-dark">
                    <a href="{{ logoUrl }}">
                        <img src="{{ asset('assets/images/' ~ logo) }}" alt="">
                    </a>
                    {% if app.request.getPathInfo() matches '/multigama-service-/' %}
                        <a href="#">
                            <img src="{{ asset('assets/images/ksb-exclusive-service-partner.jpeg' ) }}" alt="" class="small-logo">
                        </a>
                    {% elseif app.request.getPathInfo() matches '/multigama-tech-/'  %}
                        <a href="#">
                            <img src="{{ asset('assets/images/ksb-business-partner.jpeg' ) }}" alt="" class="small-logo-tech">
                        </a>
                    {% endif %}
                </div>
                <!-- Nav Toggle Button -->
                <button class="navbar-toggler collapsed navicon justify-content-end" type="button"
                        data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
                <!-- Extra Nav -->
{#                <div class="extra-nav">#}
{#                    <div class="extra-cell">#}
{#                        <a href="#" class="btn shadow-primary btn-secondary btn-quote">#}
{#                            <span>CERE OFERTA</span>#}
{#                        </a>#}
{#                    </div>#}
{#                </div>#}
                <!-- Extra Nav -->
                <!-- Quik Search -->
                <!--
                <div class="dz-quik-search">
                    <form action="#">
                        <input name="search" value="" type="text" class="form-control" placeholder="Enter Your Keyword ...">
                        <span  id="quik-search-remove"><i class="ti-close"></i></span>
                    </form>
                </div>
                -->
                <!-- Quik Search -->
                <div class="header-nav navbar-collapse collapse justify-content-end" id="navbarNavDropdown">
                    <div class="logo-header logo-dark">
                        <a href="{{ logoUrl }}">
                            <img src="{{ asset('assets/images/' ~ logo) }}" alt="">
                        </a>
                    </div>
                    <ul class="nav navbar-nav">
                        {% for item in multiGamaGroupMenu %}
                            {% if item.sub_menu is defined %}
                                <li class="sub-menu-down">
                                <a href="javascript:">{{ item.name|trans }}</a>
                                <ul class="sub-menu">
                                    {% for subItem in item.sub_menu %}
                                        <li class="new-page">
                                            <a class="{{ subItem.class }}" href="{{ subItem.path }}">{{ subItem.name|trans }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <li class="">
                                <a class="{{ item.class }}" href="{{ item.path }}">{{ item.name|trans }}</a>

                            {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="dz-social-icon">
                        <ul>
                            <li><a class="fab fa-facebook-f" href="#" target="_blank"></a></li>
                            <li><a class="fab fa-instagram" href=#multigama.service"
                                   target="_blank"></a>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main Header End -->

</header>
<!-- Header End -->
